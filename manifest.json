{
  "manifest_version": 3,
  "name": "FoxVox",
  "version": "1.0",
  "description": "Provided with OpenAI API key, rewrites any website to look like something else!",
  "permissions": ["storage", "activeTab", "tabs", "scripting", "webNavigation"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.main.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
